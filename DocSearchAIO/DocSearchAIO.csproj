<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Akka" Version="1.4.20" />
        <PackageReference Include="Akka.Streams" Version="1.4.20" />
        <PackageReference Include="DocumentFormat.OpenXml" Version="2.13.0" />
        <PackageReference Include="DocumentFormat.OpenXml.DotNet.Core" Version="1.0.1" />
        <PackageReference Include="itext7" Version="7.1.15" />
        <PackageReference Include="NEST" Version="7.12.1" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
        <PackageReference Include="Optional" Version="4.0.0" />
        <PackageReference Include="Optional.Collections" Version="1.1.0" />
        <PackageReference Include="Optional.Utilities" Version="1.1.0" />
        <PackageReference Include="Quartz" Version="3.3.2" />
        <PackageReference Include="Quartz.AspNetCore" Version="3.3.2" />
        <PackageReference Include="Quartz.Extensions.DependencyInjection" Version="3.3.2" />
        <PackageReference Include="Quartz.Extensions.Hosting" Version="3.3.2" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.1.4" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="DocSearch\Views\DocumentDetailModalPartial.cshtml" />
      <_ContentIncludedByDefault Remove="DocSearch\Views\PaginationPartial.cshtml" />
      <_ContentIncludedByDefault Remove="DocSearch\Views\ResultPageConfigurationModalPartial.cshtml" />
      <_ContentIncludedByDefault Remove="DocSearch\Views\SearchResultsPartial.cshtml" />
    </ItemGroup>

    <ItemGroup>
      <Content Update="config\config.json">
        <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <Content Remove="quartz.config" />
    </ItemGroup>

</Project>
